/* pages/edit/edit.wxss */

page {
    width: 100%;
    height: 100%;
    background-color: chocolate;
}

.container_body{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction :column;
}

.avatar_image_bg_view{
    width: 100%;
    height: 120rpx;
    background-color: brown;
    display: flex;
    justify-content: center;
}

.avatar_image_view {
    height: 118rpx;
    width: 118rpx;
    background-color: chartreuse;
}

.nike_name_view {
    width: 100%;
    height: 65rpx;
    background-color: gainsboro;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

}



.nike_name_title_text_view {
    margin-left: 10rpx;
    height: 100%;
    font-size: 37rpx;
    background-color: yellow;
    text-align: center;
}


.nike_name_textarea_view {
    height: 100%;
    width: 88%;
    /* font-size: 35rpx; */
    background-color: rebeccapurple;
    margin-left: 8rpx;
}

.phone_number_view {
    background-color: thistle;
    margin-top: 44rpx;
    padding-bottom: 11px;
    width: 100%;

    display: flex;
    flex-direction :column;
}

.add_phone_btn_view{

    background-color: gray;
    margin-top: 20rpx;
    
    height: 30px;
    width: 100%;

    display: flex;
    flex-direction: row;
    align-items: center;
    /* justify-content: center; */
}

.image_btn{
    width: 30px;
    height: 30px;
    background-color: darkmagenta;
    margin-left: 8rpx;
    align-items: center;
}

.add_phone_title_view{
    height: 44rpx;
    font-size: 35rpx;
    margin-left: 8rpx;
    background-color: darkslateblue;
}

.delete_btn {


    margin-top: 40rpx;

    width: 100%;
    height: 44rpx;
    background-color: red;
    text-align: center;
    font-size: 35rpx;
    color: white;
}

.add_btn {
    margin-top: 40rpx;

    width: 100%;
    height: 44rpx;
    background-color:blue;
    text-align: center;
    font-size: 35rpx;
    color: white;
}

.input_phone_view{
    width: 100%;
    height: 66rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    /* align-content: center; */
    justify-content: center;
    background-color: tomato;
}

.input_phone_number_textarea {
    height: 65rpx;
    margin-left: 8rpx;
    background-color: yellowgreen;
    flex-grow: 2;
}

.line_view{
    background-color: turquoise;
    width: 100%;
    height: 1rpx;
    margin-left: 88rpx;
}